{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <main>
        <section class="my-5 w-100 d-flex justify-content-center align-center">
            <form  class="d-flex flex-column justify-center">
                <div class="mb-3 d-flex flex-column">
                    <label for="exampleInputEmail1" class="form-label">Pseudonyme</label>
                    <label>
                        <input type="pseudo" class="form-control" aria-describedby="pseudoHelp">
                    </label>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <label>
                        <input type="email" class="form-control" aria-describedby="emailHelp">
                    </label>
                    <div id="emailHelp" class="form-text">Nous ne partagerons jamais votre email autres d'autres personnes.</div>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
                    <label>
                        <input type="password" class="form-control">
                    </label>
                </div>
                <button type="submit" class="btn button-full">Envoyer</button>
            </form>
        </section>
    </main>
{% endblock %}
