{% extends 'base.html.twig' %}

{% block title %}Cr√©er une annonce{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <main>
                <div id="titleAddPro" class="title">
                        <h3>Catalogue</h3>
                </div>
                <div class="add-products">
                        {{ form_start(form) }}
                        <div class="title-container">
                                {{ form_label(form.title, "Titre de l'annonce") }}
                                {{ form_widget(form.title) }}
                        </div>
                        <div class="description-container">
                                <div class="description-title">{{ form_label(form.description, "Description") }}</div>
                                {{ form_widget(form.description) }}
                        </div>
                        <div class="type-container">
                                {{ form_label(form.type, "Plateforme") }}
                                {{ form_widget(form.type) }}
                        </div>
                        <div class="image-container">
                                {{ form_label(form.imageFile) }}
                                {{ form_widget(form.imageFile) }}
                        </div>
                        <button class="btn" type="submit">Envoyer</button>
                        {{ form_end(form) }}

                        {#    {{ form(form) }}#}
                </div>
        </main>
{% endblock %}
