{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<main class="d-flex justify-content-around align-items-center flex-wrap">
    <article class="my-5">
        <div class="details-img-container">
            <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="img-fluid" alt="image article">
            <section class="details-product-container">
                <h5 class="title">{{ product.title }}</h5>
                <p>Il y a 1 mois</p>
            </section>
        </div>
        <div class="description-container">
            <p class="">{{ product.description }}</p>
        </div>
    </article>
    <article class="details-contact-card">
        <div class="card">
            <div class="card" style="width: 25rem;">
                <div class="card-body d-flex justify-content-around align-items-center">
                    <div>
                        <h5 class="card-title">{{ currentuUsers.username }}</h5>
                    </div>
                    <div class="button-container">
                        <a href="#"><button class="button-full">Voir plus</button></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <a href="#"><button class="button-empty long mb-3">Partager</button></a>
                <div>
                    <p><i>Email : </i>{{ currentuUsers.email }}</p>
{#                    <p><i>Tel : </i>0606060606</p>#}
                </div>
            </div>
        </div>
    </article>
</main>
{% endblock %}
