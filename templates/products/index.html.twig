{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <main>
        <div class="title my-3">
            <h3>Catalogue</h3>
        </div>
        <div class="card-container d-flex justify-content-around flex-wrap my-5">
                {% for article in articles %}
                    <div class="card m-2" style="width: 18rem;">
                        <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="card-img-top" alt="image article">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">{{ article.title }}</h5>
                                    <p class="card-text">Il y a 1 mois</p>
                            </div>
                            <p class="card-text">{{ article.description }}</p>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_product_page.detail', {id: article.id}) }}"><button class="button-empty">Voir plus</button></a>
                                <button class="fav"><img src="{{ asset('images/Icon-feather-heart.png') }}" class="card-img-top" alt="favorite"></button>
                            </div>
                        </div>
                    </div>
                {% endfor %}

        </div>
    </main>
{% endblock %}
