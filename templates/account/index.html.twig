{% extends 'base.html.twig' %}

{% block title %}Bonjour {{ currentuUsers.username }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<main>
    <section class="d-flex justify-content-center flex-column align-items-center">
        <div class="username">
            <p><i>Nom d'utilisateur : </i>{{ currentuUsers.username }}</p>
        </div>
        <div class="annonces">
            <p><i>Nombre d'annonces : </i>{{ number_post }}</p>
        </div>
        <div class="email">
            <p><i>Email : </i>{{ currentuUsers.email }}</p>
        </div>
        <div class="share w-25">
            <a href="#"><button class="button-empty long mb-3">Partager</button></a>
        </div>
    </section>
</main>
{% endblock %}
